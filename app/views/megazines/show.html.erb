<h3>
	Magzine
</h3>
<div class="panel panel-default">
	<div class="panel-heading">
	  <h3><%=  @megazine.title %></h3>
	  <p style="float: right; margin-right: 20px;position: relative; bottom: 10px;"> Posted On: <%= @megazine.published.strftime('%a %d %b %Y')%>
	    
	  </p>
	</div>
	<div class="panel-body">
	 <p> Articles List</p>
		<ul>
			<% @megazine.articles.each do |article| %>
				<li><%= link_to article.title ,article %> </li>
			<% end %>
		</ul>
	</div>
	 <div class="panel-footer">
	  <% if user_signed_in? %>
	    <%= link_to 'Edit', edit_megazine_path(@megazine) %> |
	    <%= link_to "Add Article", new_article_path(megazine_id: @megazine.id)%> |
	  <% end %>  
	  <%= link_to "Back",@megazines_path%>
	</div>
</div>


