<div class="container">
  <h2>Listing Magazines</h2>
  <ul class="list-group">
    <% @megazines.each do |megazine| %>
        <li class="list-group-item">
          <%= link_to megazine.title , megazine %>
        <% if user_signed_in? && current_user == megazine.user%>
          <span class="badge col-sm-offset-1">
          <%= link_to 'Edit', edit_megazine_path(megazine) %>
          </span> 
          <span class="label label-danger float-right ">
            <%= link_to 'Remove', megazine ,method: 'delete' %>
          </span> 
        <% end %>    
        </li>
    <% end %>
  </ul>
</div>

