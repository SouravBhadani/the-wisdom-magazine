<%= div_for @comment do %>
  <div class="main">
    <div class="headline">
      <span class="position">New comment as</span>
      <span class="name">
          <%= link_to @comment.user.first_name,"#" %>
          on <%= link_to @comment.article.title, @comment.article %>
      </span>
      <% unless @comment.created_at.nil? %>
        <%= @comment.created_at.strftime('%a %d %b %Y') %>
      <% end %>
    </div>
    <div class="comment_content">
      <%= form_for @comment, :remote => true do |f| %>
        <div>
          <%= f.hidden_field :article_id %>
          <%= f.hidden_field :parent %>
        </div>
        <div class="field">
          <%= f.text_area :body, :rows => '8', :cols => 65 %>
        </div>
        <div class="actions">
          <%= f.submit("Post Comment") %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="clear"></div>
<% end %>
