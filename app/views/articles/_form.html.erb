  
  <%= form_for(@article ) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-inputs">
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :megazine_id %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title,style:"width:90%" %>
    </div>
    <div class="form-group body">
      <label class="desc optional control-label" for="article_body">Body</label>
      <textarea class="string body optional form-control"  name="article[body]" column="30" style="width:90%"rows="5" id="body" require>
        <%= f.object.body %>
      </textarea>
    </div>
    <div class="field">
      <%= f.label :author %><br>
      <%= f.text_field :author,style:"width:90%"  %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit,:class=>"btn btn-primary" %>
    <input class="btn btn-danger" type="reset" value="Reset">
  </div>
  <% end %>

<script>
  function textarea_height(e) {
    $(e).css({'height':'auto','overflow-y':'hidden'}).height(e.scrollHeight);
  }
  $('textarea').each(function () {
    textarea_height(this);
  }).on('input', function () {
    textarea_height(this);
  });
</script>